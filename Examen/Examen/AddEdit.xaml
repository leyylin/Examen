<Page x:Class="Examen.AddEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Examen"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEdit">

    <Grid Background="white">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="183*"/>
            <ColumnDefinition Width="617*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="54*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0">Статус заказа</TextBlock>
        <TextBox Text="{Binding Статус_заказа}" Grid.Column="1" Grid.Row="0" Background="#BEBEBE" Width="500px" HorizontalAlignment="Left" TextChanged="TextBox_TextChanged"></TextBox>

        <Button Content="Сохранить" Grid.ColumnSpan="2" Grid.Row="9" Margin="5px" Name="BtnSave" Click="BtnSave_Click"></Button>
    </Grid>
</Page>
